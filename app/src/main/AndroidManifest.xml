<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fountainar">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />
    <uses-feature android:name="com.google.ar.core.depth" />

    <application
        android:allowBackup="true"
        android:appCategory="game"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FountainAR"

        tools:targetApi="tiramisu">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.DemographicQuestionnaire"
            android:exported="true" />

        <activity
            android:name=".activities.ARActivity"
            android:exported="true" />

        <activity
            android:name=".activities.TAMQuestionnaire"
            android:exported="true" />

        <activity
            android:name=".activities.EndActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <meta-data
            android:name="com.google.android.ar.API_KEY"
            android:value="AIzaSyDG7P_5zZ1Dz_ItvqdrKjislYs_Ho5ksII" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDG7P_5zZ1Dz_ItvqdrKjislYs_Ho5ksII" />

    </application>

</manifest>